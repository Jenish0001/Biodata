<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data_Activity2"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:background="#13CA90"
        >
             <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#13CA90"
                android:text="Bio Data"
                android:textColor="@color/black"
                android:textSize="30dp"
                />
<!--            <ImageView-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->

<!--                android:src="@drawable/ic_twotone_check_24"-->
<!--                />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:padding="10dp"
            android:text="|| Om namah shivay ||"
            android:textColor="@color/black"

            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Name :"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />

                    <EditText
                        android:id="@+id/name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="name"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColorHint="#656565"

                        android:textSize="20dp"
                        android:maxLines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Surname :"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/surname_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Surname"
                        android:textColor="@color/black"
                        android:textColorHint="#656565"
                        android:textSize="20dp"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Fathername :"
                        android:fontFamily="@font/poppins"

                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/fname_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="fathername"
                        android:textColorHint="#656565"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Village :"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"

                        android:textSize="20dp"
                        />
                    <EditText
                        android:id="@+id/village_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="village "
                        android:fontFamily="@font/poppins"
                        android:textSize="20dp"
                        android:textColorHint="#656565"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Age :"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <TextView
                        android:id="@+id/age1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <SeekBar
                        android:id="@+id/age_seek"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:min="0"
                        android:max="100"

                        android:layout_gravity="bottom"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Gender :"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <RadioGroup
                        android:id="@+id/rg_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/male_rg_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <RadioButton
                        android:id="@+id/female_rg_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Mobile No.:"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/mobileno_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Mobile no."
                        android:textColor="@color/black"
                        android:textColorHint="#656565"
                        android:inputType="numberDecimal"
                        android:textSize="20dp"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Education :"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/education_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:textColorHint="#656565"
                        android:textColor="@color/black"
                        android:hint="Educatoin "
                        android:textSize="20dp"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Birth Data:"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/brithdata_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Birth data"
                        android:textColor="@color/black"
                        android:textColorHint="#656565"
                        android:textSize="20dp"
                        android:inputType="date"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Skills :"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins"

                           />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/reading_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reading"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"

                        />
                                <CheckBox
                                    android:id="@+id/dancing_chk"
                                    android:layout_width="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:layout_height="wrap_content"
                                    android:text="Dancing"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                    <CheckBox

                        android:id="@+id/movie_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movie"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"

                        />


                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Gmail :"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins"

                        />
                    <EditText
                        android:id="@+id/gmail_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:maxLines="1"
                        android:textColorHint="#656565"
                        android:fontFamily="@font/poppins"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >
                    <Button
                        android:id="@+id/done_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:backgroundTint="#00BCD4"
                        android:textColor="@color/black"
                        android:textSize="15dp"

                        />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>